@model EventEaseBookingSystem.Models.Event


@{
    ViewData["Title"] = "Edit Event";
}

<h2>Edit Event</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="EventName" class="control-label"></label>
        <input asp-for="EventName" class="form-control" />
        <span asp-validation-for="EventName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EventDate" class="control-label"></label>
        <input asp-for="EventDate" class="form-control" type="date" />
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>
   
    <!-- Newly added VenueId dropdown -->
    <div class="form-group">
        <label asp-for="VenueId" class="control-label"></label>
        <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueId"></select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>

    <!-- NEW: EventType dropdown -->
    <div class="form-group">
        <label asp-for="EventTypeId" class="control-label">Event Type</label>
        <select asp-for="EventTypeId" class="form-control" asp-items="ViewBag.EventTypes">
            <option value="">-- Select Event Type --</option>
        </select>
        <span asp-validation-for="EventTypeId" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="EventId" />
    <button type="submit" class="btn btn-primary" style="background-color: #ff33d0; color: white; padding: 10px 20px; border: none; border-radius: 5px; font-size: 16px;">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
