@model Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this venue?</h3>

<div class="container mt-4">
    <h2 class="text-danger mb-4">@ViewData["Title"]</h2>

    <h4 class="mb-4">Are you sure you want to delete this venue?</h4>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.VenueName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.VenueName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Location)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Location)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Capacity)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Capacity)</dd>

                <dt class="col-sm-3">Venue Image</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Venue Image" class="img-fluid rounded" style="max-height: 200px;" />
                    }
                    else
                    {
                        <span>No Image Available</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="VenueId" />
        <button type="submit" class="btn" style="background-color: #b8a4c9; color: black; border-radius: 5px; padding: 8px 16px; font-weight: 500;">
            <i class="fas fa-trash-alt"></i> Delete Venue
        </button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
    </form>
</div>

<style>
    dt {
        font-weight: 500;
        color: #6c757d;
    }

    dd {
        margin-bottom: 0.5rem;
    }
</style>