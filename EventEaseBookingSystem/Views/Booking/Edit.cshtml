@model Booking

@{
    ViewData["Title"] = "Edit Bookings";
}

<h1><i class="fas fa-edit"></i>Edit  Booking</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="BookingId" />

    <div class="form-group">
        <label asp-for="EventId">Select Event</label>
        <select asp-for="EventId" asp-items="ViewBag.Events" class="form-select"></select>
        <span asp-validation-for="EventId" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="VenueId">Select Venue</label>
        <select asp-for="VenueId" asp-items="ViewBag.Venues" class="form-select"></select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="BookingDate">Booking Date & Time</label>
        <input asp-for="BookingDate" type="datetime-local" class="form-control" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>

        <button type="submit" class="btn btn-primary" style="background-color: #ff33d0; color: white; padding: 10px 20px; border: none; border-radius: 5px; font-size: 16px;">Save</button>
               <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
   
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}